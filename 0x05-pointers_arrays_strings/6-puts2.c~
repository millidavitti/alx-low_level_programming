#include <stdio.h>
#include <string.h>
/**
 *puts2 - prints every other character of a string, \
starting with the first character, followed by a new line.
*@str: char*
*Return: void
*/

void puts2(char *str)
{
int i, len = strlen(str);
for(i = 0; i < len; i++)
{
if (i % 2 != 0)
continue;
putchar(str[i]);
}
putchar('\n');
}
